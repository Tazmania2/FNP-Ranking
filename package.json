{
  "name": "chicken-race-ranking",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "A gamified leaderboard visualization system that transforms traditional ranking displays into an engaging, animated chicken race experience",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/build-for-deployment.js",
    "build:fast": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run src/test/e2e",
    "test:performance": "vitest run src/test/performance",
    "test:scenarios": "vitest run src/test/scenarios",
    "test:watch": "vitest --watch",
    "test:all": "npm run test:run && npm run test:e2e && npm run test:performance && npm run test:scenarios",
    "build:analyze": "ANALYZE_BUNDLE=true npm run build && npx rollup-plugin-visualizer dist/stats.html --open",
    "build:size": "npm run build && npx bundlesize",
    "deploy:preview": "vercel --prod=false",
    "deploy:production": "vercel --prod",
    "verify:deployment": "node scripts/verify-deployment.js",
    "postbuild": "echo 'Build completed successfully. Ready for deployment.'"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.6",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fast-check": "^4.4.0",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "vite": "^7.1.6",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "axios": "^1.12.2",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.16",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.8"
  }
}
